(  SELECT COUNT(tcz.ID)  FROM TabPersVyberRizeni tpvr WITH(NOLOCK)  LEFT OUTER JOIN TabPersVyberRizeniZamestnanec tpvrz WITH(NOLOCK) ON tpvrz.VyberRizeniId = tpvr.ID   LEFT OUTER JOIN TabCisZam tcz WITH(NOLOCK) ON tcz.ID = tpvrz.ZamestnanecID  WHERE tpvr.ID = TabPersVyberRizeni.ID AND tcz.ID IN (SELECT TabZamMzd.ZamestnanecId  FROM TabZamMzd  WHERE  (TabZamMzd.IdObdobi=(SELECT tabmzdobd.ID FROM TabMzdObd WITH(NOLOCK) WHERE TabMzdObd.Mes = (SELECT DATEPART(MONTH,GETDATE())) AND TabMzdObd.Rok = (SELECT DATEPART(YEAR,GETDATE()))))  AND((TabZamMzd.DuvodUkonceniPP=N'02')OR(TabZamMzd.DuvodUkonceniPP=N'13')))  )
