(  SELECT (SUBSTRING(REPLACE(SUBSTRING(tpkv.[Poznamka],1,255),(NCHAR(13) + NCHAR(10)),NCHAR(32)),1,255))  FROM TabPrKVazby tpkv WITH(NOLOCK)  JOIN TabPohybyZbozi tpz WITH(NOLOCK) ON tpz.DokladPrikazu = tpkv.Doklad AND tpz.IDPrikaz = tpkv.IDPrikaz  JOIN Gatema_SDScanData gsd WITH(NOLOCK) ON gsd.IDPohZbo_New = tpz.ID AND gsd.IDKmenZbozi = tpkv.nizsi  WHERE gsd.ID =hvw_TermNasnimPol.ID AND tpkv.IDOdchylkyDo IS NULL  )
