(  CAST (CASE WHEN EXISTS  (SELECT *  FROM TabKJUcastZam tkjz WITH(NOLOCK)  INNER JOIN TabKontaktJednani tkj WITH(NOLOCK) ON tkj.ID = tkjz.IDKJ  INNER JOIN TabCisZam tcz WITH(NOLOCK) ON tcz.ID = tkjz.IDZam  INNER JOIN TabDokumVazba tdv WITH(NOLOCK) ON tdv.IdTab = tkj.ID  INNER JOIN TabDokumenty td WITH(NOLOCK) ON td.ID = tdv.IdDok AND tdv.IdentVazby = 1  WHERE tkjz.PovinneVyjadreni = 1 AND td.ID = TabDokumenty.ID AND tcz.LoginId = SUSER_SNAME()) THEN 1 ELSE 0 END AS bit)  )
