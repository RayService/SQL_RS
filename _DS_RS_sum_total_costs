(  SELECT ISNULL(pvre._EXT_RAY_value1,0) + ISNULL(pvre._EXT_RAY_value2,0) + ISNULL(pvre._EXT_RAY_value3,0) + ISNULL(pvre._EXT_RAY_value4,0) + ISNULL(pvre._EXT_RAY_value5,0)  FROM TabPersVyberRizeni pvr WITH(NOLOCK)  JOIN TabPersVyberRizeni_EXT pvre WITH(NOLOCK) ON pvre.ID = pvr.ID  WHERE pvr.ID = TabPersVyberRizeni.ID  )  +  (  SELECT ISNULL(SUM(tpmaz.Mzda),0)  FROM TabPrikazMzdyAZmetky tpmaz WITH(NOLOCK)  JOIN TabPrikazMzdyAZmetky_EXT tpmaze WITH(NOLOCK) ON tpmaze.ID=tpmaz.ID  LEFT OUTER JOIN TabPersVyberRizeni tpvr WITH(NOLOCK) ON tpvr.ID=tpmaze._EXT_RS_vyberove_rizeni  WHERE tpvr.ID=TabPersVyberRizeni.ID  )
